<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
  </startup>
  
  <appSettings>
    <!-- SharePoint App-Only Authentication Settings -->
    <add key="SharePointClientId" value="YOUR_CLIENT_ID_HERE" />
    <add key="SharePointClientSecret" value="YOUR_CLIENT_SECRET_HERE" />
    
    <!-- Optional: For High-Trust Apps using Certificate Authentication -->
    <add key="SharePointCertificateThumbprint" value="" />
    <add key="SharePointIssuerId" value="" />
    
    <!-- Optional: SharePoint Authentication Endpoint (for custom STS) -->
    <add key="SharePointAuthEndpoint" value="" />
  </appSettings>
  
  <system.web>
    <compilation targetFramework="4.8" />
  </system.web>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SharePoint.Client" publicKeyToken="71e9bce111e9429c" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-16.1.0.0" newVersion="16.1.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.SharePoint.Client.Runtime" publicKeyToken="71e9bce111e9429c" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-16.1.0.0" newVersion="16.1.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
